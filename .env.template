# API base URL (no trailing slash)
VITE_API_URL=https://api-better-call-dally.amovil.com.co:42281

# WebSocket URL (optional). If empty, derived from VITE_API_URL.
VITE_WS_URL=wss://api-better-call-dally.amovil.com.co:42281/ws

# WebSocket detail level: summary | full
VITE_WS_DETAIL=full

# WebSocket polling interval (ms)
VITE_WS_INTERVAL_MS=5000

# Alert thresholds
VITE_ALERT_CPU=90
VITE_ALERT_MEMORY=92
VITE_ALERT_DISK=95
VITE_ALERT_STALE_MS=90000

# Stats refresh (ms). Keeps PM2/Supervisor visible even when WS summary is used.
VITE_STATS_REFRESH_MS=60000

# Stats request timeout (ms).
VITE_STATS_TIMEOUT_MS=20000

# PM2 toast timings
VITE_PM2_TOAST_AUTO_CLOSE_MS=60000
VITE_PM2_TOAST_REPEAT_MS=600000
